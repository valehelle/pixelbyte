
<div class="box box-primary">
    <div class="box-body with-border">
      <h6 class="box-title"><%= @post.content %></h6>
    </div>
    <div class="box-footer">
        <%= form_for @post, url: update_post_path(@current_tab,@post), html: {class: 'col-xs-12'} do |f| %>
            <div class="form-group ">
                <%= f.label "Enable Private Message" %> 
                <div class="material-switch">      
                    <%= f.check_box  :is_private_message %>
                    <%= f.label :is_private_message, '&nbsp;'.html_safe,  {class: 'label-primary'} %> 
                </div>
            </div>
            <div class="form-group">
                <%= f.label "PM Content" %> <br>
                <%= f.text_area   :private_message_content, {class: 'form-control'}  %> <br />
            </div>
            <div class="form-group">
                <%= f.label "Enable Comment Reply" %> 
                <div class="material-switch">      
                    <%= f.check_box  :is_reply %>
                    <%= f.label :is_reply, '&nbsp;'.html_safe,  {class: 'label-primary'} %> 
                </div>
            </div>            
            <div class="form-group">
                <%= f.label "Reply Content" %> 
                <%= f.text_field   :reply_content , {class: 'form-control'} %> <br />
            </div>            
           
            <%= f.submit "Edit" , {class: 'btn btn-primary'}%>
        <% end %>
    </div>
</div>