
<div class="box box-primary">
    <div class="box-body with-border">
      <h6 class="box-title"><%= @post.content %></h6>
    </div>
    <div class="box-footer">
        <%= form_for @post, url: update_post_path(@current_tab,@post), html: {class: 'col-xs-12'} do |f| %>
            <div class="form-group ">
                <%= f.label "Enable Private Message" %> 
                <div class="material-switch">      
                    <%= f.check_box  :is_private_message %>
                    <%= f.label :is_private_message, '&nbsp;'.html_safe,  {class: 'label-primary', id: 'pm-switch'} %> 
                </div>
            </div>
            <% if @post.is_private_message %>
            <div class="form-group" id = "pm-input">
            <% else %>
            <div class="form-group" id = "pm-input" style= "display: none;">
            <% end %>
                <%= f.label "Private message content" %> <br>
                <%= f.text_area :private_message_content, {class: 'form-control', placeholder: 'Enter the message that will be sent to the user inbox'}  %> <br />
            </div>
            <div class="form-group">
                <%= f.label "Enable Comment Reply" %> 
                <div class="material-switch">      
                    <%= f.check_box  :is_reply %>
                    <%= f.label :is_reply, '&nbsp;'.html_safe,  {class: 'label-primary', id: 'reply-switch'} %> 
                </div>
            </div>            
            <% if @post.is_reply %>
            <div class="form-group" id = "reply-input">
            <% else %>
            <div class="form-group" id = "reply-input" style= "display: none;">
            <% end %>
                <%= f.label "Comment reply content" %> 
                <%= f.text_area   :reply_content , {class: 'form-control', placeholder: 'Enter the message that will be replied to the user comment'} %> <br />
            </div>            
           
            <%= f.submit "Save" , {class: 'btn btn-primary'}%>
        <% end %>
    </div>
</div>